#include <iostream>
using namespace std;

double hitungRata(double data[], int n) {
    double total = 0;
    for (int i = 0; i < n; i++) {
        total += data[i];
    }
    return total / n;
}

void analisisSel(double tegangan, double rata) {
    cout << "Tegangan: " << tegangan << " V -> ";

    if (tegangan > 4.20)
        cout << "Overvoltage (Perlu Discharge)";
    else if (tegangan < 3.00)
        cout << "Undervoltage (Perlu Charge)";
    else if (tegangan < rata - 0.05)
        cout << "Balancing: Charge ringan";
    else if (tegangan > rata + 0.05)
        cout << "Balancing: Discharge ringan";
    else
        cout << "Normal";

    cout << endl;
}

int main() {
    int n;
    int mode;
    double suhu;

    cout << "=== SMART BATTERY ANALYZER ===\n";

    cout << "Masukkan suhu baterai (°C): ";
    cin >> suhu;

    if (suhu > 45) {
        cout <<"\n  SUHU TERLALU TINGGI (" << suhu << "°C)\n";
        cout <<"  Sistem dimatikan baterai terlalu panas!\n";
        return 0;  // Menghentikan program
    }

 cout << "Masukkan jumlah sel baterai: ";
    cin >> n;

    cout << "Pilih konfigurasi baterai:\n";
    cout << "1. Seri\n";
    cout << "2. Paralel\n";
    cout << "Pilihan: ";
    cin >> mode;

    double tegangan[20]; // maksimal 20 sel
    double total = 0;

    for (int i = 0; i < n; i++) {
        cout << "Tegangan sel " << i + 1 << " (Volt): ";
        cin >> tegangan[i];
        total += tegangan[i];
    }

    double rata = hitungRata(tegangan, n);

    cout << "\n--- HASIL ANALISIS ---\n";
    cout << "Rata-rata Tegangan : " << rata << " V\n";
    cout << "Suhu Baterai : " << suhu << "°C\n";

 if (mode == 1) {
        cout << "Konfigurasi : Seri\n";
        cout << "Tegangan Total : " << total << " V\n\n";
    } else if (mode == 2) {
        cout << "Konfigurasi : Paralel\n";
        cout << "Tegangan Total : " << rata << " V (mendekati tegangan rata-rata)\n\n";
    }

   
    for (int i = 0; i < n; i++) {
        cout << "Sel " << i + 1 << " -> ";
        analisisSel(tegangan[i], rata);
    }

    cout << "\nAnalisis selesai.\n";
    return 0;
}
